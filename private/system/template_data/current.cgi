use strict;

use Stuffed::System;

sub current {
	my $self = shift;

	my $stack = $system->stash('__sub_stack') || [];
	my $current = $stack->[0] || {};
	
	my $vars = {
		pkg_name	=> $current->{pkg_name},
		action_name	=> $current->{action_name},
		sub_name	=> $current->{sub_name},
	};

	return $vars;
}

1;